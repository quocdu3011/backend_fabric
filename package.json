    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fabric-ca-client": "^2.2.20",
    "fabric-network": "^2.2.20",
    "jsonwebtoken": "^9.0.2",
    "node-forge": "^1.3.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
