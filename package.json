  "description": "Backend API Server for Degree Issuance and Student Transcript Management with Hyperledger Fabric",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
